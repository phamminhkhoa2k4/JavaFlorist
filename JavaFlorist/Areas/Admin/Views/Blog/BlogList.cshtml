@model JavaFlorist.Models.DTO.BlogListVm;
@{
    ViewData["Title"] = "BlogList";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}

<div class="container-fluid">

    <div class="row">

        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4" style="margin-top:80px;">
                    <h5 class="card-title fw-semibold mb-4">Blog List</h5>
                    <a href="/Admin/Blog/Add" class="btn btn-primary">Add</a>
                    <div class="table-responsive">
                        @if (TempData["msg"] != null)
                        {
                            <div class="alert alert-success mt-3" role="alert">
                                @TempData["msg"]
                            </div>
                        }
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Thumnail</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Title</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Blog Date</h6>

                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Content</h6>
                                    </th>
                                    <th class="border-bottom-0 px-5">
                                        <h6 class="fw-semibold mb-0">Action</h6>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach( var item in Model.BlogList.Reverse())
                                {
                                    <tr>
                                        <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@item.blog_id</h6></td>
                                        <td class="border-bottom-0">
                                            <img src="/Uploads/@item.thumbnail" style="height:30px;width:30px"/>
                                        </td>
                                        <td class="border-bottom-0">
                                            <p class="mb-0 fw-normal">@item.title</p>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0 fs-4">@item.blog_date.ToString("MM/dd/yyyy")</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <h6 class="fw-semibold mb-0 fs-4">@item.content</h6>
                                        </td>
                                        <td class="border-bottom-0">
                                            <a href="/Admin/Blog/Edit?id=@item.blog_id" class="btn btn-info">Edit</a>
                                            <a onclick="return window.confirm('Are you want delete blog have title @item.title ')" href="/Admin/Blog/Delete?id=@item.blog_id" class="btn btn-danger">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                      
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


