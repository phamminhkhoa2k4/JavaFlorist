@model JavaFlorist.Models.Domain.Bouquet_Info;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}


<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Forms</h5>
                <div class="card mt-5">
                    <div class="card-body">
                        <form class="w-40" method="post" asp-action="Add" asp-controller="Shop" style="background-color:#ffffff;border-radius:5px;padding:24px" enctype="multipart/form-data">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="name">Name</label>
                                        <input type="text" asp-for="name"  name="name" class="form-control" style="border: 1px solid #e8e8e8;" required/>
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="name"> </span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="ImageFile">Thumnail</label>
                                        <input type="file" asp-for="ImageFile" name="ImageFile" class="form-control" style="border: 1px solid #e8e8e8;" required />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="ImageFile"> </span>
                                    </div>
                                </div>
                            </div>
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="price">Price</label>
                                        <input type="number" class="form-control" name="price" asp-for="price" required />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="price"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="quantity">Quantity</label>
                                        <input type="number" asp-for="quantity" name="quantity" class="form-control" style="border: 1px solid #e8e8e8;" required />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="quantity"> </span>
                                    </div>
                                </div>
                            </div>
                          
                            <!-- Message input -->
                            <div class="form-outline ">
                                <label class="form-label" asp-for="category">Category</label>
                                <select class="form-select" asp-for="category" name="category"required>
                                    <option value="Birthday">Birthday</option>
                                    <option value="Wedding">Wedding</option>
                                    <option value="New Baby">New Baby</option>
                                    <option value="Thank You">Thank You</option>
                                    <option value="Father Day">Father Day</option>
                                    <option value="Mother Day">Mother Day</option>
                                    <option value="Lover">Lover</option>
                                </select>
                            </div>
                            <div class="message-box pd-x-28 error ">
                                <span asp-validation-for="category"> </span>
                            </div>
                            @if (TempData["msg"] != null)
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    @TempData["msg"]
                                </div>
                            }
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-danger btn-block mt-4 mb-6">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>