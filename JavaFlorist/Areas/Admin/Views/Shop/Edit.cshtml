@model JavaFlorist.Models.Domain.Bouquet_Info;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}

<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Forms</h5>
                <div class="card mt-5">
                    <div class="card-body">
                        <form class="w-40" method="post" asp-action="Edit" asp-controller="Shop" style="background-color:#ffffff;border-radius:5px;padding:24px" enctype="multipart/form-data">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <input type="hidden" name="bouquet_id" value="@Model.bouquet_id" />
                            <input type="hidden" name="bouquetImage" value="@Model.bouquetImage" />
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="name">Name</label>
                                        <input type="text" asp-for="name" value="@Model.name" name="name" class="form-control" style="border: 1px solid #e8e8e8;" required />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="name"> </span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="ImageFile">Thumnail</label>
                                        <input type="file" asp-for="ImageFile" name="ImageFile" class="form-control" style="border: 1px solid #e8e8e8;"  />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="ImageFile"> </span>
                                    </div>
                                </div>
                            </div>
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="price">Price</label>
                                        <input type="number" class="form-control" value="@Model.price" name="price" asp-for="price" required />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="price"></span>
                                    </div>
                                </div>
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="quantity">Quantity</label>
                                        <input type="number" asp-for="quantity" value="@Model.quantity" name="quantity" class="form-control" style="border: 1px solid #e8e8e8;" required />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="quantity"> </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Message input -->
                            <div class="form-outline ">
                                <label class="form-label" asp-for="category">Category</label>
                                <select class="form-select" asp-for="category" value="@Model.category" required>
                                    <option value="rose">Rose</option>
                                </select>
                            </div>
                            <div class="message-box pd-x-28 error ">
                                <span asp-validation-for="category"> </span>
                            </div>
                            @if (TempData["msg"] != null)
                            {
                                <div class="alert alert-success mt-3" role="alert">
                                    @TempData["msg"]
                                </div>
                            }
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-danger btn-block mt-4 mb-6">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
