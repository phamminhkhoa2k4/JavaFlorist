@model JavaFlorist.Models.Domain.Occasion;
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}


<div class="container-fluid">
    <div class="container-fluid">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title fw-semibold mb-4">Forms</h5>
                <div class="card mt-5">
                    <div class="card-body">
                        <form class="w-40" method="post" asp-action="Edit" style="background-color:#ffffff;border-radius:5px;padding:24px" enctype="multipart/form-data">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <input type="hidden" asp-for="Occasion_id" />
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="code">Code</label>
                                        <input type="text" asp-for="Occasion_name" name="Occasion_name" value="@Model.Occasion_name" class="form-control" style="border: 1px solid #e8e8e8;" required />
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="Occasion_name"></span>
                                    </div>
                                </div>
                               
                            </div>
                            <div class="row mb-4">
                                <div class="col">
                                    <div class="form-outline">
                                        <label class="form-label" asp-for="descrease">Decrease</label>
                                        <textarea type="number" asp-for="Message" class="form-control" name="message" style="border: 1px solid #e8e8e8;" required >@Model.message</textarea>
                                    </div>
                                    <div class="message-box pd-x-28 error">
                                        <span asp-validation-for="Message"> </span>
                                    </div>
                                </div>
                            </div>


                                @if (TempData["msg"] != null)
                            {
                                <div class="alert alert-danger mt-3" role="alert">
                                    @TempData["msg"]
                                </div>
                            }
                            <!-- Submit button -->
                            <button type="submit" class="btn btn-danger btn-block mt-4 mb-6">Save</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


