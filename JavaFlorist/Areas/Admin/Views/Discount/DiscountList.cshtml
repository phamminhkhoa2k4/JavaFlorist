@model IEnumerable<JavaFlorist.Models.Domain.Discount>
@{
    ViewData["Title"] = "DiscountList";
    Layout = "~/Areas/Admin/Views/Shared/_AdLayout.cshtml";
}

<div class="container-fluid">

    <div class="row">
      
        <div class="col-lg-12 d-flex align-items-stretch">
            <div class="card w-100">
                <div class="card-body p-4" style="margin-top:80px;">
                    <h5 class="card-title fw-semibold mb-4">Discount List</h5>
                    <div class="d-flex">
                         <a href="/Admin/Discount/Add" class="btn btn-primary">Add</a>
                    <form method="get" action="/Admin/Discount/DiscountList"  style="padding-left:10px">
                            <div class="d-flex" style="gap:5px;">
                                <input type="text" class="form-control" id="searchInput" name="search" value="@ViewBag.SearchTerm" />
                               <button type="submit" class="btn btn-primary">Search</button>
                            </div>
                        </form>

                    </div>
                   
                    <div class="table-responsive">
                         
                          @if (TempData["msg"] != null)
                            {
                                <div class="alert alert-success mt-3" role="alert">
                                    @TempData["msg"]
                                </div>
                            }
                        <table class="table text-nowrap mb-0 align-middle">
                            <thead class="text-dark fs-4">
                                <tr>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Id</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Code</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Decrease</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0">Count</h6>
                                    </th>
                                    <th class="border-bottom-0">
                                        <h6 class="fw-semibold mb-0 px-5">Action</h6>
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                  
                                @foreach(var item in  Model.Reverse())
                                {
                                    <tr>
                                        <td class="border-bottom-0"><h6 class="fw-semibold mb-0">@item.discount_id</h6></td>
                                        <td class="border-bottom-0">
                                           <p class="mb-0 fw-normal">@item.code</p>
                                        </td>
                                        <td class="border-bottom-0">
                                            <p class="mb-0 fw-normal">@item.decrease</p>
                                        </td>
                                        <td class="border-bottom-0">
                                            <p class="mb-0 fw-normal">@item.count</p>
                                        </td>
                                        <td class="border-bottom-0">
                                            <a href="/Admin/Discount/Edit?id=@item.discount_id" class="btn btn-info">Edit</a>
                                            <a  onclick="return window.confirm('Are you want delete discount have name @item.code')" href="/Admin/Discount/Delete?id=@item.discount_id" class="btn btn-danger">Delete</A>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</div>



