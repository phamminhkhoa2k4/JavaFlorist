        document.addEventListener('DOMContentLoaded', () => {
            const menuIcon = document.getElementById('menu-icon');
            const dropdownMenu = document.querySelector('.dropdown-menu');
            let isHover = false;

            menuIcon.addEventListener('click', () => {
                if (isHover) {
                    dropdownMenu.classList.remove('show');
                    isHover = false;
                } else {
                    dropdownMenu.classList.add('show');
                    isHover = true;
                }
            });

            document.addEventListener('click', (event) => {
                const targetElement = event.target;
                if (!dropdownMenu.contains(targetElement) && !menuIcon.contains(targetElement)) {
                    dropdownMenu.classList.remove('show');
                    isHover = false;
                }
            });
        });


        const editIcon = document.getElementById('editIcon');
        const addProfile = document.getElementById('add-profile');
        const profile = document.querySelector('.profile');
        const arrowBack = document.querySelector('.arrow-back');
        const inputFile = document.querySelector('.inputFile');
        editIcon.addEventListener('click', function () {
            editIcon.classList.add('hidden');
            arrowBack.classList.add('display');
            profile.classList.add('hidden');
            addProfile.classList.add('display');
            inputFile.classList.add('display')
        });

        const arrow = document.getElementById('arrowBack');
        arrow.addEventListener('click', function () {
            editIcon.classList.remove('hidden');
            arrowBack.classList.remove('display');
            profile.classList.remove('hidden');
            addProfile.classList.remove('display');
            inputFile.classList.remove('display')

        });

