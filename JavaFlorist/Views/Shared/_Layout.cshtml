@using JavaFlorist.Models.Domain;
@using Microsoft.AspNetCore.Identity


     


@inject UserManager<ApplicationUser> UserManager
@{
 
    string username = User.Identity.Name;
    string avatar = "";
    int? id = 0;
    string email = "";
    string firstName = "";
    string lastname = "";
    int? phone = 0;
    string gender = "";
    string UserId = "";
    DateTime? birth = DateTime.Now;
    string address = "";
    if (!string.IsNullOrEmpty(username))
    {
        var serviceProvider = ViewContext.HttpContext.RequestServices;
        // Truy cập đến đối tượng DbContext từ dịch vụ (Service) hoặc Dependency Injection (DI)
        var dbContext = serviceProvider.GetRequiredService<DatabaseContext>();
        var user = await UserManager.FindByNameAsync(username);
        avatar = user?.ProfilePicture ?? "";
        id = user?.cust_id;
        UserId = user?.Id;
        email = user?.Email;
        if (user != null)
        {
            dbContext.Entry(user).Reference(u => u.Customer).Load();


            if (user.Customer != null)
            {
                    firstName = user.Customer.F_name;
                    lastname = user.Customer.L_name;
                    phone = user.Customer.P_no;
                    gender = user.Customer.Gender;
                    birth = user.Customer.Dob;
                    address = user.Customer.Address;
            }
        }
    }
}

