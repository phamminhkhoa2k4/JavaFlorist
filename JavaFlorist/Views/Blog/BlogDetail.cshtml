@model JavaFlorist.Models.Domain.Blog;
@{
    ViewBag.Title = "Blog Detail";
}

<div class="hero-wrap hero-bread" style="background-image: url('/BG/4.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="#">Home</a></span> <span>Blog</span></p>
                <h1 class="mb-0 bread">Blog</h1>
            </div>
        </div>
    </div>
</div>

<section class="ftco-section ftco-degree-bg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 ftco-animate">
                <h2 class="mb-3">@Model.title</h2>
                <p>@Model.content</p>
                <p>
                    <img src="/Uploads/@Model.thumbnail" alt="" class="img-fluid w-100">
                </p>
                



            </div>
        </div>
    </div>
</section>