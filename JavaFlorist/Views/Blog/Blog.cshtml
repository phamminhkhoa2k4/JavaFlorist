@model JavaFlorist.Models.DTO.BlogListVm;
@{
    ViewBag.Title = "Blog";
    ViewBag.Index = 4;
}

<div class="hero-wrap hero-bread" style="background-image: url('/BG/1.jpg');">
      <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
          <div class="col-md-9 ftco-animate text-center">
          	<p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Blog</span></p>
            <h1 class="mb-0 bread">Blog</h1>
          </div>
        </div>
      </div>
    </div>

    <section class="ftco-section ftco-degree-bg">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 ftco-animate">
						<div class="row">

                    @foreach( var item in Model.BlogList)
                    {
                        <div class="col-md-12 d-flex ftco-animate">
                            <div class="blog-entry align-self-stretch d-md-flex">
                                <a href="/Blog/BlogDetail?id=@item.blog_id" class="block-20" style="background-image: url('/Uploads/@item.thumbnail');">
                                </a>
                                <div class="text d-block pl-md-4">
                                    <div class="meta mb-3">
                                        <div><a href="#">@item.blog_date</a></div>
                                        <div><a href="#">Admin</a></div>
                                    </div>
                                    <h3 class="heading"><a href="#">@item.title</a></h3>
                                    <p>@item.content</p>
                                    <p><a href="/Blog/BlogDetail?id=@item.blog_id" class="btn btn-primary py-2 px-3">Read more</a></p>
                                </div>
                            </div>
                        </div>
                    }
                   
		         
						</div>
          </div> <!-- .col-md-8 -->
          <div class="col-lg-4 sidebar ftco-animate">
            <div class="sidebar-box">
              <form asp-action="Blog" class="search-form">
                <div class="form-group">
                  <span class="icon ion-ios-search"></span>
                            <input type="text" name="term" class="form-control" placeholder="Search...">
                </div>
              </form>
            </div>
        

            <div class="sidebar-box ftco-animate">
              <h3 class="heading">Recent Blog</h3>
              <div class="block-21 mb-4 d-flex">
                <a class="blog-img mr-4" style="background-image: url(/images/image_1.jpg);"></a>
                <div class="text">
                  <h3 class="heading-1"><a href="#">Even the all-powerful Pointing has no control about the blind texts</a></h3>
                  <div class="meta">
                    <div><a href="#"><span class="icon-calendar"></span> April 09, 2019</a></div>
                    <div><a href="#"><span class="icon-person"></span> Admin</a></div>
                    <div><a href="#"><span class="icon-chat"></span> 19</a></div>
                  </div>
                </div>
              </div>
              <div class="block-21 mb-4 d-flex">
                <a class="blog-img mr-4" style="background-image: url(/images/image_2.jpg);"></a>
                <div class="text">
