@model JavaFlorist.Models.DTO.ChangePasswordModel;

@{
    ViewBag.Title = "Change Password";
    string username = User.Identity.Name;
}





<div class="hero-wrap hero-bread" style="background-image: url('/BG/10.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home</a></span> <span>Login</span></p>
                <h1 class="mb-0 bread">Change Password</h1>
            </div>
        </div>
    </div>
</div>
<section class="login spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-11">
                <div class="login__form">
                    <form asp-action="ChangePassword" method="post" style="color:#000">
                        <input type="hidden" asp-for="Username" value="@username" />
                        <div class="form-group">
                            <label asp-for="CurrentPassword">Current Password:</label>
                            <input type="password" asp-for="CurrentPassword" class="form-control" required />
                        </div>

                        <div class="form-group">
                            <label asp-for="NewPassword">New Password:</label>
                            <input type="password" asp-for="NewPassword" class="form-control" required />
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword">Confirm Password:</label>
                            <input type="password" asp-for="ConfirmPassword" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-outline-primary">Change Password</button>
                    </form>


                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }

                </div>
            </div>
            
        </div>

    </div>
</section>